# Backend Environment Variables

# Database Configuration
DATABASE_URL=postgresql://username:password@host:port/database

# JWT Secrets (use different secrets for each)
JWT_SECRET=your_supplier_jwt_secret_here
JWT_ADMIN_SECRET=your_admin_jwt_secret_here  
JWT_DELIVERY_SECRET=your_delivery_jwt_secret_here
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here  # For refresh tokens

# Server Configuration
PORT=3001
NODE_ENV=development

# CORS Origins (add your deployed frontend URLs)
CORS_ORIGINS=http://localhost:5173,http://localhost:5174,http://localhost:5175,http://localhost:5176

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Development Bypass Configuration (should only be used in development)
DEV_BYPASS_SECRET=your_dev_bypass_secret_here

# Production Webhook Configuration (for production deployment)
TELEGRAM_WEBHOOK_URL=https://your-backend-domain.com

# Optional: Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000