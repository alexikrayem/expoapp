# This script is a thin wrapper for the gradle binary that ensures that
# the APP_HOME environment variable is set appropriately regardless
# of how the script is invoked.

# Locate Gradle
if [ -n "$ANDROID_GRADLE_HOME" ]; then
  GRADLE="$ANDROID_GRADLE_HOME/bin/gradle"
elif [ -n "$GRADLE_HOME" ]; then
  GRADLE="$GRADLE_HOME/bin/gradle"
else
  echo "Neither ANDROID_GRADLE_HOME nor GRADLE_HOME are set, please set one of them to your Gradle installation directory." >&2
  exit 1
fi

# Run gradle with the provided arguments.
exec "$GRADLE" "$@"